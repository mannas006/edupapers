{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server/index.js"
    },
    {
      "src": "/webhook/(.*)",
      "dest": "/backend/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "PYTHON_PATH": "/backend/src"
  },
  "functions": {
    "backend/server/index.js": {
      "includeFiles": "backend/src/**"
    }
  },
  "installCommand": "cd frontend && npm install && cd ../backend && npm install && pip install -r requirements.txt",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist"
}
